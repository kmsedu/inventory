generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Item {
  id           String      @id @default(auto()) @map("_id") @db.ObjectId
  name         String      @unique
  description  String
  categories   Category[]  @relation(fields: [categoryIds], references: [id])
  categoryIds  String[]    @db.ObjectId
  price        Float
  stockItems   StockItem[] @relation(fields: [stockItemIds], references: [id])
  stockItemIds String[]    @db.ObjectId
}

model Category {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  name        String   @unique
  description String
  items       Item[]   @relation(fields: [itemIds], references: [id])
  itemIds     String[] @db.ObjectId
}

model StockItem {
  id      String   @id @default(auto()) @map("_id") @db.ObjectId
  name    String
  items   Item[]   @relation(fields: [itemIds], references: [id])
  itemIds String[] @db.ObjectId
}

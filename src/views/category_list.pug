extends layout 

block content 
  h1 Categories
  table
    tr 
      th Name 
      th Description 
      th # of items
    each category, index in categories 
      div.category_list_item
        tr
          td.table_name
            a(href="/category/" + category.id)= category.name
          td.table_description= category.description
          td= itemCounts[index] 

extends layout

block content 
  .page_heading
    h1 Home
  section.overview 
    div.overview-items
      a(href="/items/")
        h2 Items
      table 
        tr 
          th Name 
          th Description 
          th Price 
        each item of items 
          tr
            td.table_name
              a(href="/item/" + item.id)= item.name
            td.table_description= item.description
            td.price= item.price.toFixed(2)
    div.overview-categories
      a(href="/categories/")
        h2 Categories
      table 
        tr 
          th Name 
          th Description
        each category of categories
          tr 
            td.table_name
              a(href="/category/" + category.id)= category.name
            td.table_description= category.description
